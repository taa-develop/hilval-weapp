.order-item {
  margin: 30px 10px;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0 2px 5px #ccc;
}
.order-item .top-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding: 10px;
}

.order-item .logo {
  width: 50px;
  height: 50px;
  margin-right: 10px;
  background-color: #ccc;
  border-radius: 50%;
}

.order-item .content {
  flex: 1;
}
.order-item .name {
  font-size: 120%;
  margin-right: 0.5em;
}

.order-item .info {
  color: #ccc;
}

.order-item .date-bar {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 20px;
  color: #757575;
  text-align: center;
}

.order-item .total-days {
  color: rgb(68, 143, 132);
}

.order-item .bottom-bar {
  display: flex;
  border-top: 1px solid #efefef;
}

.price {
  text-align: center;
  color: rgb(68, 143, 132);
  font-size: 150%;
}

.order-item .bottom-bar > .btn {
  flex: 1;
  padding: 10px;
  color: rgb(68, 143, 132);
  text-align: center;
}
.order-item .bottom-bar > .btn:not(:last-child) {
  border-right: 1px solid #efefef;
}
