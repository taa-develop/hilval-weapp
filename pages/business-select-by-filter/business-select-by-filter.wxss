.filter {
  background-color: #fff;
}
.title {
  font-size: 16px;
  margin-left: 10px;
  color: #757575;
}
.list {
  margin: 10px 20px;
}
.item {
  display: inline-block;
  margin-right: 10px;
  margin-bottom: 10px;
  padding: 2px 10px;
  border-radius: 5px;
  border: 1px solid #757575;
  color: #757575;
}
.item.active {
  border-color: rgb(68, 143, 132);
  color: rgb(68, 143, 132);
}
.line {
  height: 1px;
  margin: 10px;
  background-color: #efefef;
}
