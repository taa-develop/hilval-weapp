.tenants {
  min-height: 100vh;
  padding-top: 20px;
  background-color: #fff;
  box-sizing: border-box;
}

.add-tenant {
  margin: 20px 0;
  text-align: center;
  color: rgb(68, 143, 132);
}

.tenant-item {
  display: flex;
  align-items: center;
  margin: 0 10px;
  padding: 16px 0;
  border-bottom: 1px solid #e6e6e6;
}

.tenant-item > .name {
  width: 4em;
  margin-right: 0.5em;
}

.tenant-item > .number {
  flex: 1;
}

.tenant-item > .check-status {
  padding: 2px 6px;
  border-radius: 5px;
  background-color: rgba(68, 143, 132, 1);
  color: #ffffff;
  font-size: 12px;
}

.tenant-item > .delete-btn {
  width: 20px;
  height: 20px;
  margin-left: 20px;
}
