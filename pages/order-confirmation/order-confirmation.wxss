.order-confirmation {
  min-height: 100vh;
  padding: 10px;
  box-sizing: border-box;
  background-color: #fff;
}
.house-name {
  margin: 5px 0;
  font-size: 150%;
}
.info {
  margin: 5px 0;
}
.preview {
  width: 100%;
  height: 360rpx;
}

.time-bar {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 10px 0;
}
.total-info {
  color: rgb(68, 143, 132);
}

.title {
  font-size: 110%;
}
.input-wrap {
  display: flex;
  align-items: center;
  margin: 10px;
  border-bottom: 1px solid #efefef;
}
.item-title {
  width: 3em;
  margin-right: 0.5em;
}
.input {
  flex: 1;
  padding: 2px 4px;
}

.pay-bar {
  margin: 20px;
  text-align: right;
}
.price,
.submit {
  display: inline-block;
  font-size: 22px;
}
.price {
  color: rgb(68, 143, 132);
}
.submit {
  margin-left: 20px;
  padding: 2px 10px;
  border-radius: 5px;
  background-color: rgb(68, 143, 132);
  color: #fff;
}
