.account-setting {
  min-height: 100vh;
  background-color: #fff;
}

.account-setting > .item {
  display: flex;
  align-items: center;
  margin: 0 20px;
  padding: 10px 0;
  border-bottom: 1px solid #efefef;
}

.account-setting > .item > .title {
  width: 4em;
}

.account-setting > .item > .input {
  flex: 1;
  margin-left: 1em;
  padding: 2px 8px;
  /* border-radius: 5px; */
  /* border: 1px solid #efefef; */
}

/* bottom btn */
.submit-bar > .fixed-clear {
  height: 50px;
}

.submit-bar > .submit {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  background-color: rgb(68, 143, 132);
  font-size: 20px;
  line-height: 2.5;
  color: #ffffff;
}
