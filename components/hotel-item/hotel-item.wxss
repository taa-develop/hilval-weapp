.hotel-item {
  display: flex;
  align-items: center;
  padding: 0.5em 0.5em 0.5em 0;
  margin-left: 1em;
  border-bottom: 1px solid #f3f3f3;
  font-size: 14px;
}

.icon {
  width: 10px;
  height: 10px;
  margin-right: 0.5em;
  border-radius: 50%;
}
.icon.lg {
  background-color: #af8fff;
}
.icon.jd {
  background-color: #78e8a5;
}
.icon.ms {
  background-color: #ff7f7e;
}
.info {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detail {
  font-size: 12px;
  color: #888;
}
.price {
  color: #449284;
}
