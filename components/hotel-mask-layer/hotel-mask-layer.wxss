.hotel-mask-layer {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 5;
  padding-top: 20vh;
  background-color: rgba(0, 0, 0, 0.75);
  transition: all 0.25s;
  visibility: visible;
  opacity: 1;
}
.hotel-mask-layer.hide {
  visibility: hidden;
  opacity: 0;
}
.hotel-mask-layer.hide .content {
  transform: translateY(100%);
}
.content {
  height: 80vh;
  padding: 10px;
  box-sizing: border-box;
  border-radius: 10px 10px 0 0;
  background-color: #fff;
  transition: all 0.25s;
}

.down {
  margin-bottom: 10px;
}
.down-icon {
  display: block;
  width: 20px;
  height: 20px;
  margin: 0 auto;
}

.images {
  display: flex;
  flex-wrap: nowrap;
  overflow-y: scroll;
}
.img {
  flex: 0 0 auto;
  width: 580rpx;
  height: 300rpx;
  margin-right: 20px;
}

.name {
  margin-top: 10px;
  font-size: 16px;
  text-align: center;
}
.info {
  margin-top: 10px;
  color: #757575;
}

.ctrl-bar {
  position: absolute;
  bottom: 20px;
  left: 20px;
  right: 20px;
  text-align: right;
}
.price,
.submit {
  display: inline-block;
  font-size: 22px;
}
.price {
  color: rgb(68, 143, 132);
}
.submit {
  margin-left: 20px;
  padding: 2px 10px;
  border-radius: 5px;
  background-color: rgb(68, 143, 132);
  color: #fff;
}
