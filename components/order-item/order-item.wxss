.order-item {
  margin: 30px 10px;
  padding: 10px;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0 2px 10px #666;
}
.top-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.logo {
  width: 50px;
  height: 50px;
  margin-right: 10px;
  background-color: #ccc;
  border-radius: 50%;
}

.name {
  font-size: 150%;
  margin-right: 0.5em;
}

.info {
  color: #ccc;
}

.check-status {
  display: inline-block;
  border-radius: 5px;
  padding: 0 4px;
  background-color: rgb(68, 143, 132);
  color: #ffffff;
}

.date-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
  color: #757575;
}

.bottom-bar {
  display: flex;
  justify-content: space-between;
  margin: 0 10px;
}

.price,
.ctrl-bar {
  flex: 1;
}

.price {
  text-align: center;
  color: rgb(68, 143, 132);
  font-size: 150%;
}

.ctrl-bar {
  text-align: right;
}

.ctrl-bar > .btn {
  display: inline-block;
  margin-left: 10px;
  padding: 4px 8px;
  border-radius: 5px;
  border: 1px solid rgb(68, 143, 132);
  color: rgb(68, 143, 132);
}

.ctrl-bar > .btn.fill {
  background-color: rgb(68, 143, 132);
  color: #ffffff;
}
